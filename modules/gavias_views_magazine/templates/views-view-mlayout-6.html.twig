{% if attributes -%}
  <div{{ attributes }}>
{% endif %}
   
  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}

  {% set i = 0 %}
  {% for row in rows %}
    {% set i = i + 1 %}
    {% if i == 1 %}
      
      <div class="item-first">
        <div class="content-inner">
          <div{{ row.attributes }}>{{ row.content|raw }}</div>
        </div>
      </div>

    {% elseif i <= number_post_column + 1 %}

      {% if i == 2 %}<div class="items-second column-small-1"><div class="content-inner">{% endif %}
        <div{{ row.attributes.addClass('item-post') }}>{{ row.content|raw }}</div>
      {% if i == number_post_column + 1 or i == rows|length %}</div></div>{% endif %} 

    {% else %}  

      {% if i == number_post_column + 2 %}<div class="items-second column-small-2"><div class="content-inner">{% endif %}
        <div{{ row.attributes.addClass('item-post') }}>{{ row.content|raw }}</div>
      {% if i == rows|length %}</div></div>{% endif %} 

    {% endif %}  

  {% endfor %}

{% if attributes -%}
    </div>
{% endif %}
